<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KrHangman" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">@font/yet_hangle</item>
        <item name="hintTextColor">@color/main_button</item>


        <item name="android:statusBarColor">@color/main_button</item>
    </style>


    <style name="Theme.KrHangman.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/main_button</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/app_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.KrHangman</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">@font/yet_hangle</item>

        <item name="android:statusBarColor">@color/main_button</item>
    </style>

    <style name="keyboard_style" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/shape_keyboard</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>